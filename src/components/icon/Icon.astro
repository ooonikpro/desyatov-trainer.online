---
import Instagram from "./icons/Instagram.astro";
import Logo from "./icons/Logo.astro";
import Menu from "./icons/Menu.astro";
import Telegram from "./icons/Telegram.astro";
import Close from "./icons/Close.astro";

interface Props {
  name: "instagram" | "logo" | "menu" | "telegram" | "close";
}

const { name, class: className } = Astro.props;
---

{name === "instagram" && <Instagram class={className} />}
{name === "logo" && <Logo class={className} />}
{name === "menu" && <Menu class={className} />}
{name === "telegram" && <Telegram class={className} />}
{name === "close" && <Close class={className} />}
