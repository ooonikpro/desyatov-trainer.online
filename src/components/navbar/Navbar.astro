---
import Icon from "@components/icon/Icon.astro";

import Social from "../social/Social.astro";
---

<nav class="navbar">
  <div class="navbar__container">
    <label for="sidebar-trigger" class="navbar__sidebar-trigger">
      <Icon name="menu" />
    </label>

    <a href="#main-section" class="navbar__logo">
      <Icon name="logo" />
    </a>

    <Social place="navbar" />

    <a href="#subscriptions" color="gradient" class="navbar__go-to-programs">
      Подписки
    </a>
  </div>
</nav>

<style lang="scss">
  $navbar-padding: 12px;

  .navbar {
    width: 100%;
    height: var(--navbar-height);
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background-color: var(--black);
    color: var(--white);
    z-index: 100;

    @include desktop() {
      --navbar-height: 70px;
    }

    &__sidebar-trigger {
      display: flex;
      align-items: center;
      justify-content: center;
      width: var(--navbar-height);
      height: var(--navbar-height);
      background: var(--black-secondary);

      :global(svg) {
        width: 1.8rem;
        height: 1.8rem;
      }
    }

    &__container {
      width: 100%;
      margin: auto;
      max-width: var(--container-width);
      height: inherit;
      display: flex;
      align-items: center;
      gap: $navbar-padding;
    }

    &__logo {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 4rem;
      height: 100%;
      color: var(--white);

      :global(svg) {
        width: 100%;

        @include desktop {
          width: 60%;
        }
      }

      @include desktop {
        width: 10rem;
      }
    }

    &__go-to-programs {
      @include bgWithGradient;
      @include fontAlternative;
      color: var(--black);
      text-decoration: none;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-left: auto;
      margin-right: $navbar-padding;
      padding: 0.4rem 0.6rem;
      font-size: 0.6rem;
      border-radius: 20px;

      @include desktop {
        font-size: 1rem;
        padding: 0.5rem 1.2rem;
      }
    }
  }
</style>
